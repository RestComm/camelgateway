<?xml version="1.0" encoding="UTF-8"?>
<deployment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:jboss:bean-deployer:2.0 bean-deployer_2_0.xsd"
	xmlns="urn:jboss:bean-deployer:2.0">
	<!-- Timer definition -->
        
	<!-- File Filter -->
    <bean name="FileFilter"
		class="org.mobicents.cap.server.bootstrap.FileFilterImpl">
		<!-- Unless specified the default list of suffixes is , -beans.xml, -conf.xml -->
        <constructor>
            <parameter>
                <set elementClass="java.lang.String">
                    <value>.xml</value>
                </set>
            </parameter>
        </constructor>
    </bean>

	<!-- The MainDeployer -->
    <bean name="MainDeployer"
		class="org.mobicents.cap.server.bootstrap.MainDeployer">
        <property name="path">${smsc.home.dir}/deploy</property>
        <property name="fileFilter"><inject bean="FileFilter"/></property>
    </bean>

</deployment>
